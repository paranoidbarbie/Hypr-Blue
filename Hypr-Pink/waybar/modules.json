    // Rofi Application Launcher
    "custom/appmenu": {
        // START APPS LABEL
        "format": "ïŒƒ ",
        // END APPS LABEL
        "on-click": "sleep 0.2;rofi -show drun",
        "tooltip": false
    },

    // System tray
    "tray": {
        "icon-size": 21,
        "spacing": 10,
    },

    // Group Hardware
    "group/system": {
        "orientation": "horizontal",
        "modules": [
            "bluetooth",
            "pulseaudio/slider",

        ],
    },

    // Group Power
    "group/power": {
        "orientation": "horizontal",
        "modules": [
            "backlight",
            "battery",
        ],
    },

    //mpris
    "mpris": {
	"format": "{title}, {artist}",
	"format-paused": "<i>{title}</i>",
	"title-len": 50, 
	"dynamic-len": 60,
	"max-length": 50,
	//"ignored-players": ["firefox"]
},
"custom/quote": {
	"format": "ãƒã‚¤ãƒ—ãƒ©ãƒ©ãƒ³ãƒ‰"
},

    // Clock
    "clock": {
        "format": "{:%H:%M %a}",
        "tooltip-format": "<big>{:%d %m %Y}</big>\n<tt><small>{calendar}</small></tt>",
        // START CLOCK FORMAT
        "format-alt": "{:%Y-%m-%d}"
        // END CLOCK FORMAT
    },


    // Network
    "network": {
        "format": "{ifname}",
        "format-wifi": "ï‡« ",
        "format-ethernet": "ïƒ ",
        "format-disconnected": "No Net",
        "tooltip-format": "ïƒ {ifname} via {gwaddri}",
        "tooltip-format-wifi": "ï‡«  {ifname} @ {essid}\nIP: {ipaddr}\nStrength: {signalStrength}%\nFreq: {frequency}MHz\nUp: {bandwidthUpBits} Down: {bandwidthDownBits}",
        "tooltip-format-ethernet": " {ifname}\nIP: {ipaddr}\n up: {bandwidthUpBits} down: {bandwidthDownBits}",
        "tooltip-format-disconnected": "Disconnected",
        "max-length": 50,
        "on-click": "nm-connection-editor",
    },

    // Battery
    "battery": {
        "states": {
            "good": 95,
            "warning": 30,
            "critical": 15
        },
