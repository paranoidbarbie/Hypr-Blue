		"format": "{icon} {percent}%",
		"interval":1,
        "on-scroll-up": "brightnessctl set 10%+",
		"on-scroll-down": "brightnessctl set 10%-",
        "format-icons": ["ï†…", "ï†…"],


	},
	// System tray
    "tray": {
        "icon-size": 20,
        "spacing": 10
    },


    // Bluetooth
    "bluetooth": {
        "format": "ïŠ“ {status}",
        "format-connected-battery": "ïŠ“ {device_alias} {device_battery_percentage}%",
        "format-disabled": "ïŠ“ {status}",
        "format-off": "ïŠ“ {status}",
        "interval": 30,
        "on-click": "rfkill unblock bluetooth",
        "on-click-middle": "blueman-manager",
        "on-click-right": "rfkill block bluetooth",
        "on-scroll-up": "bluetoothctl power on",
        "on-scroll-down": "bluetoothctl power off",
        "format-no-controller": "ïŠ“ {status}"
    },
},
    "custom/empty": {
	"format": ""
